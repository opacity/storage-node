<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ .title }} | Opacity</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
</head>

<body>
  <section class="section">
    <div class="container is-max-desktop">
      <h1 class="title">
        {{ .title }}
      </h1>
      <div id="plans">
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Cost</th>
              <th>Cost in USD</th>
              <th>Storage in GB</th>
              <th>Max Folders</th>
              <th>Max Metadata size in MB</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {{with .plans}}
            {{range .}}
              <tr>
                <th>{{ .Name }}</th>
                <th>{{ .Cost }}</th>
                <th>{{ .CostInUSD }}</th>
                <th>{{ .StorageInGB }}</th>
                <th>{{ .MaxFolders }}</th>
                <th>{{ .MaxMetadataSizeInMB }}</th>
                <th>
                  <div class="buttons">
                    <a href="{{ .StorageInGB }}" class="button is-link is-small is-primary is-outlined">Edit</a>
                    <a href="{{ .StorageInGB }}/confirm-remove" class="button is-link is-small is-danger">Remove</a>
                  </div>
                </th>
              </tr>
            {{end}}
            {{end}}
          </tbody>
        </table>
      </div>
    </div>
  </section>
</body>

</html>